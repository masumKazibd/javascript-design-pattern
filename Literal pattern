    <script>

//-----------------------Literal pattern-----------------------

        function litMsg(msg) {
            document.getElementById("literal").innerHTML += msg;
        }
        var trainee = {

            id: '1279032',
            name: "Masum Kazi",
            getInfo: function () {
                return this.id + '  :  ' + this.name;
            }
        }
        litMsg(trainee.getInfo());

    </script>
